{
  "name": "@mymcp/engine",
  "version": "0.1.0",
  "description": "myMCP Game Engine - Express.js API for state management and quest logic",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec \"npm run build && node dist/index.js\"",
    "start": "node dist/index.js",
    "test": "jest",
    "clean": "node -e \"const fs=require('fs'); if(fs.existsSync('./dist')) fs.rmSync('./dist',{recursive:true,force:true})\"",
    "prebuild": "npm run clean",
    "build:full": "node build.js build"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.54.0",
    "@mymcp/types": "file:../../shared/types",
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.0",
    "helmet": "^7.0.0",
    "joi": "^17.11.0",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "openai": "^5.5.0",
    "uuid": "^9.0.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/morgan": "^1.9.0",
    "@types/node": "^20.19.0",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.0",
    "jest": "^29.0.0",
    "nodemon": "^3.0.0",
    "supertest": "^6.3.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
